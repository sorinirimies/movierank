<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:id="@+id/contMoviesFragment"
        android:layout_height="match_parent"
        tools:context=".ui.movies.MoviesFragment">

    <androidx.recyclerview.widget.RecyclerView android:layout_width="0dp"
                                               android:id="@+id/rvMovies"
                                               android:layout_height="0dp"
                                               app:layout_constraintTop_toTopOf="parent"
                                               app:layout_constraintStart_toStartOf="parent"
                                               app:layout_constraintEnd_toEndOf="parent"
                                               android:layout_margin="8dp"
                                               app:layout_constraintBottom_toBottomOf="parent"/>

    <com.getbase.floatingactionbutton.FloatingActionsMenu
            xmlns:fab="http://schemas.android.com/apk/res-auto"
            android:id="@+id/fab_movie_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:background="@android:color/transparent"
            fab:fab_addButtonColorNormal="@color/colorPrimary"
            fab:fab_addButtonColorPressed="@color/colorPrimaryDark"
            fab:fab_addButtonPlusIconColor="@color/colorAccent"
            fab:fab_addButtonSize="normal"
            fab:fab_labelStyle="@style/menu_labels_style"
            fab:fab_labelsPosition="left"
            android:layout_marginBottom="8dp"
            fab:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp"
            fab:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="8dp"
            fab:layout_constraintStart_toStartOf="parent"
            fab:layout_constraintHorizontal_bias="1.0">

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_colorNormal="@color/white"
                android:id="@+id/fabMoviesTitlePosterActorNameCharacterPicture"
                fab:fab_title="Title, Poster, Actor[Name, Character, Picture]"
                fab:fab_colorPressed="@color/white_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_size="mini"
                fab:fab_colorNormal="@color/white"
                android:id="@+id/fabMoviesTitleDatePosterActor"
                fab:fab_title="Title, Date, Poster, Actor[Name]"
                fab:fab_colorPressed="@color/white_pressed"/>

        <com.getbase.floatingactionbutton.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                fab:fab_colorNormal="@color/white"
                fab:fab_size="mini"
                android:id="@+id/fabMoviesTitleDatePosterGenreScore"
                fab:fab_title="Title, Date, Poster, Genre, Score"
                fab:fab_colorPressed="@color/white_pressed"/>

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</androidx.constraintlayout.widget.ConstraintLayout>